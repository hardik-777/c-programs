  Author : Hardik Sharma  Roll No. 19301   Date: 24-07-2021*/
#include<stdio.h>
#include<conio.h>
void main()
  {
     int i,j,size;
     clrscr();
     printf("Enter the size :");
     scanf("%d",&size);
     for(i=size;i>=1;i--)
	{
	   for(j=1;j<=size-i;j++)
	      {
		 printf(" ");
	      }
	   for(j=1;j<=2*i-1;j++)
	      {
		 printf("*");
	      }
	   printf("\n");
	}
     getch();
  }
